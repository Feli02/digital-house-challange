<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href='https://css.gg/css' rel='stylesheet'>

    <%- include('./headPartial')%> 

    <title>Digital Movies: Editando Perfil</title>
</head>
<body>
    <%- include('./header')%> 
    <main>
        <h1>Editando</h1>
        <section class="formulario">
            <form action="/usuario/editar/<%= userEdit.id %>" method="POST">

                <!--Mensaje error name-->
                <% if (locals.errors && errors.name) { %>
                    <div class="text-danger">
                        <%= errors.name.msg %> 
                    </div>
                <% } %>
                <!--Input name-->
                <div>
                    <label for="name">Nombre</label>
                    <!-- <i class="gg-user"></i> -->
                    <input type="text" name="name" id="" placeholder="Nombre" <%= locals.errors && errors.name ? 'is-invalid' : null %>
                    value="<%= locals.oldData ? oldData.name : null %>">
                    <!-- <i class="gg-check-o"></i> -->
                    <!-- <i class="gg-close-o"></i> -->
                </div>
                


                <!--Mensaje error email-->
                <% if (locals.errors && errors.email) { %>
                    <div class="text-danger">
                        <%= errors.email.msg %> 
                    </div>
                <% } %>
                <!--Input email-->
                <div>
                    <label for="email">Email</label>
                    <!-- <i class="gg-mail"></i> -->
                    <input type="email" name="email" id="" placeholder="example@email.com" <%= locals.errors && errors.email ? 'is-invalid' : null %>
                    value="<%= locals.oldData ? oldData.email : null %>">
                    <!-- <i class="gg-check-o"></i> -->
                    <!-- <i class="gg-close-o"></i> -->
                </div>
                                


                <!--Mensaje error confirm-password-->
                <% if (locals.errors && errors.old_password) { %>
                    <div class="text-danger">
                        <%= errors.old_password.msg %> 
                    </div>
                <% } %>
                <!--Input confirm-password-->
                <div>
                    <label for="old_password">Antigua contrase単a</label>
                    <!-- <i class="gg-redo"></i> -->
                    <input type="password" name="old_password" id="old_password" placeholder="*****" <%= locals.errors && errors.old_password ? 'is-invalid' : null %>>
                    <!-- <i class="gg-check-o"></i> -->
                    <!-- <i class="gg-close-o"></i> -->
                </div>
                

                
                 <!--Mensaje error password-->
                 <% if (locals.errors && errors.password) { %>
                    <div class="text-danger">
                        <%= errors.password.msg %> 
                    </div>
                <% } %>
                <!--Input password-->
                <div>
                    <label for="password">Contrase単a</label>
                    <!-- <i class="gg-lock"></i> -->
                    <input type="password" name="password" id="password" placeholder="*****" <%= locals.errors && errors.password ? 'is-invalid' : null %>>
                    <!-- <i class="gg-check-o"></i> -->
                    <!-- <i class="gg-close-o"></i> -->
                </div>
                
                
                
                <input type="checkbox" id="ver" name="ver" onChange="seePassword()">Ver contrase単a
                <!-- <i class="gg-eye">Ver Contrase単a</i> -->

                <script src="/js/seePassword.js"></script>

                <!--Button create-->
                <button type="submit" value="Enviar" class="button">Crear Cuenta</button>
            </form>
        </section>
    </main>
</body>
</html>