<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <%- include('./headPartial')%> 

    <title>Digital Movies: Create</title>
</head>

<body>
    <%- include('./header')%> 
    <h1 class="titulo">Agregar Película</h1>
    <br>
    <section class="formulario">
        <form action="/movies/create" method="POST">

            <% if (locals.errors && errors.title) { %>
                <div class="text-danger">
                    <%= errors.title.msg %> 
                </div>
            <% } %>
            <label for="title">Title </label>
            <p><input type="text" name="title" id="" required></p>


            <% if (locals.errors && errors.rating) { %>
                <div class="text-danger">
                    <%= errors.rating.msg %> 
                </div>
            <% } %>
            <label for="rating">Rating </label>
            <p><input type="number" name="rating" id="" required> </p>


            <% if (locals.errors && errors.awards) { %>
                <div class="text-danger">
                    <%= errors.awards.msg %> 
                </div>
            <% } %>
            <label for="awards">Awards </label>
            <p><input type="number" name="awards" id="" required></p>


            <% if (locals.errors && errors.release_date) { %>
                <div class="text-danger">
                    <%= errors.release_date.msg %> 
                </div>
            <% } %>
            <label for="release_date">Release date </label>
            <p><input type="date" name="release_date" id="" required></p>


            <% if (locals.errors && errors.length) { %>
                <div class="text-danger">
                    <%= errors.length.msg %> 
                </div>
            <% } %>
            <label for="length">Length </label>
            <p><input type="number" name="length" id="" required></p>


            <% if (locals.errors && errors.genre_id) { %>
                <div class="text-danger">
                    <%= errors.genre_id.msg %> 
                </div>
            <% } %>
            <label for="genre_id">Género</label>
            <select name="genre_id" required>
                <option value="1">Comedia</option>
                <option value="2" >Terror</option>
                <option value="3">Drama</option>
                <option value="4">Acción</option>
                <option value="5">Ciencia Ficcion</option>
                <option value="6">Suspenso</option>
                <option value="7">Animación</option>
                <option value="8">Aventuras</option>
                <option value="9">Documental</option>
                <option value="10">Infantiles</option>
                <option value="11">Fantasía</option>
                <option value="12">Musical</option>
            </select>

            

            <br>
            <p> <button class="botonAgregar" type="submit">Agregar</button>
            
            <a  class="botonVolver" href="/">Listado de Películas</a></p>
        </form>
    </section>
    
</body>

</html>